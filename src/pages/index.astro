---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
<head>
	<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	<link rel="stylesheet" href="/styles/gallery.css" />
</head>
<body>
<Header />
<main class="gallery-container">
	<img src="/images/logoBannerWhite.svg" alt="Gargylon Records" class="logo-banner" />

	<div class="image-row">
		<div class="image-card">
			<div class="image-wrapper">
				<img src="/images/artist1.png" alt="Artist 1" />
				<div class="card-buttons full-overlay">
					<a href="#" class="card-btn spotify">
						<img src="https://cdn.jsdelivr.net/npm/simple-icons@v11/icons/spotify.svg" alt="Spotify" /> Spotify
					</a>
					<a href="#" class="card-btn social1">
						<img src="https://cdn.jsdelivr.net/npm/simple-icons@v11/icons/instagram.svg" alt="Instagram" /> Instagram
					</a>
					<a href="#" class="card-btn social2">
						<img src="https://cdn.jsdelivr.net/npm/simple-icons@v11/icons/bluesky.svg" alt="Bluesky" /> Bluesky
					</a>
					<a href="mailto:artist1@email.com" class="card-btn email">
						<img src="https://cdn.jsdelivr.net/npm/simple-icons@v11/icons/maildotru.svg" alt="Email" /> Email
					</a>
				</div>
			</div>
		</div>

		<div class="image-card">
			<div class="image-wrapper">
				<img src="/images/artist2.png" alt="Artist 2" />
				<div class="card-buttons full-overlay">
					<a href="#" class="card-btn spotify">
						<img src="https://cdn.jsdelivr.net/npm/simple-icons@v11/icons/spotify.svg" alt="Spotify" /> Spotify
					</a>
					<a href="#" class="card-btn social1">
						<img src="https://cdn.jsdelivr.net/npm/simple-icons@v11/icons/instagram.svg" alt="Instagram" /> Instagram
					</a>
					<a href="#" class="card-btn social2">
						<img src="https://cdn.jsdelivr.net/npm/simple-icons@v11/icons/bluesky.svg" alt="Bluesky" /> Bluesky
					</a>
					<a href="mailto:artist2@email.com" class="card-btn email">
						<img src="https://cdn.jsdelivr.net/npm/simple-icons@v11/icons/maildotru.svg" alt="Email" /> Email
					</a>
				</div>
			</div>
		</div>

		<div class="image-card">
			<div class="image-wrapper">
				<img src="/images/artist3.jpg" alt="Artist 3" />
				<div class="card-buttons full-overlay">
					<a href="#" class="card-btn spotify">
						<img src="https://cdn.jsdelivr.net/npm/simple-icons@v11/icons/spotify.svg" alt="Spotify" /> Spotify
					</a>
					<a href="#" class="card-btn social1">
						<img src="https://cdn.jsdelivr.net/npm/simple-icons@v11/icons/instagram.svg" alt="Instagram" /> Instagram
					</a>
					<a href="#" class="card-btn social2">
						<img src="https://cdn.jsdelivr.net/npm/simple-icons@v11/icons/bluesky.svg" alt="Bluesky" /> Bluesky
					</a>
					<a href="mailto:artist3@email.com" class="card-btn email">
						<img src="https://cdn.jsdelivr.net/npm/simple-icons@v11/icons/maildotru.svg" alt="Email" /> Email
					</a>
				</div>
			</div>
		</div>

		<div class="image-card">
			<div class="image-wrapper">
				<img src="/images/artist4.jpg" alt="Artist 4" />
				<div class="card-buttons full-overlay">
					<a href="#" class="card-btn spotify">
						<img src="https://cdn.jsdelivr.net/npm/simple-icons@v11/icons/spotify.svg" alt="Spotify" /> Spotify
					</a>
					<a href="#" class="card-btn social1">
						<img src="https://cdn.jsdelivr.net/npm/simple-icons@v11/icons/instagram.svg" alt="Instagram" /> Instagram
					</a>
					<a href="#" class="card-btn social2">
						<img src="https://cdn.jsdelivr.net/npm/simple-icons@v11/icons/bluesky.svg" alt="Bluesky" /> Bluesky
					</a>
					<a href="mailto:artist4@email.com" class="card-btn email">
						<img src="https://cdn.jsdelivr.net/npm/simple-icons@v11/icons/maildotru.svg" alt="Email" /> Email
					</a>
				</div>
			</div>
		</div>
	</div>
</main>


<Footer />
<script src="/scripts/tilt.js" is:inline></script>
</body>
</html>
