---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
<head>
	<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	<link rel="stylesheet" href="/styles/gallery.css" />
</head>
<body>
<Header />
<main class="gallery-container">
	<h1 class="hero-title">Gargylon Records</h1>
	<div class="image-row">
		<div class="image-card">
			<img src="/images/artist1.png" alt="Artist 1" />
		</div>
		<div class="image-card">
			<img src="/images/artist2.png" alt="Artist 2" />
		</div>
		<div class="image-card">
			<img src="/images/artist3.png" alt="Artist 3" />
		</div>
		<div class="image-card">
			<img src="/images/artist4.png" alt="Artist 4" />
		</div>
	</div>
</main>
<Footer />
<script src="/scripts/tilt.js" is:inline></script>
</body>
</html>
